{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@gremlin/session": ["./packages/session/src"],
      "@gremlin/analysis": ["./packages/analysis/src"],
      "@gremlin/cli": ["./packages/cli/src"],
      "@gremlin/recorder-web": ["./packages/recorder-web/src"],
      "@gremlin/recorder-react-native": ["./packages/recorder-react-native/src"],
      "@gremlin/proto": ["./packages/proto/src"],
      "@gremlin/server": ["./packages/server/src"],
      "@gremlin/ast": ["./packages/ast/src"]
    }
  },
  "exclude": ["node_modules", "dist", "examples/sample-output"]
}
